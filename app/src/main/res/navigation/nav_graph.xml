<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.allegro_intern_2022.fragments.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_list_repositories">
        <action
            android:id="@+id/action_homeFragment_to_detailFragment"
            app:destination="@id/detailFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />/>
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.allegro_intern_2022.fragments.DetailFragment"
        android:label="DetailFragment"
        tools:layout="@layout/fragment_repository">
        <action
            android:id="@+id/action_detailFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <argument
            android:name="details"
            app:argType="com.example.allegro_intern_2022.models.RepoResponseItem" />
    </fragment>

</navigation>